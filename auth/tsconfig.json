{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@db/*": ["db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "files": ["src/custom.d.ts"]
}
